#!/usr/bin/env bash

open_vim=${1:-0}
echo $open_vim
dirs=(~ ~/work ~/personal)

if [ -d ~/work/hello ]; then
    dirs+=(~/work/hello)
fi

dir=$(find -L "${dirs[@]}" -mindepth 1 -maxdepth 1 -type d | fzf)

echo $dir

if [[ -n $dir ]]; then
    cd $dir

    if [ "$open_vim" -eq 1 ]; then
        nvim .
    fi
fi

